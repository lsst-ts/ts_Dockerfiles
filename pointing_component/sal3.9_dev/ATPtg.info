; Log level is one of verbose, debug, info, warning, error or fatal
log_level info

; fast and slow process intervals (ms)
fast_interval 50
slow_interval 10000

; fast loop lookahead (ms)
timestamp_lookahead 60

; Weather data
weather {
  default_temp 10.0
  max_temp 35.0
  min_temp -25.0
  default_pressure 770.0
  max_pressure 860.0
  min_pressure 660.0
  default_humidity 0.1
  max_humidity 0.95
  min_humidity 0.0
  nodata_warn 20            ;seconds
}

site {
    mean_elong -70.74942
    mean_lat -30.24464
    height 2663.0
    tz -4.0
}

instrument_location "Nasmyth left"
"Nasmyth left" {
    instrument_alignment_angle 0.0
}
"Nasmyth right" {
    instrument_alignment_angle 0.0
}

focal_length 100000.0;              ; mm
rnogo 3600.0                          ; arcsec
pointing_model at.mod

; Axis limits
horizon_limit 15.0
azimuth_low_limit -270.0
azimuth_high_limit 270.0
rotator_low_limit -60.0
rotator_high_limit 160.0

; Additional margin when slewing to a new target
slew_limit_margin 1.0

; Default observing wavelength
wavelr 0.8

proximity {
  sun_minor 10.0; degrees
  sun_major 5.0;
  moon_minor 5.0;
  moon_major 2.0;
}

dbg_time_offset 0.0

mountdata {
  nodata_minor 1.0; seconds
  nodata_major 5.0; seconds
}

;Telemetry posting intervals
post_telem {
  telem_fast_interval 200
  telem_slow_multiplier 25
}

command_timeouot {
  ack 10000; ms              General timeouts for receiving SAL__CMD_ACK
  inprogress 10000; ms       General timeouts for receiving SAL__CMD_INPROGRESS (after SAL__CMD_ACK)
  start_tracking 10000; ms  Command reply timeout for ATMCS startTracking command (after SAL__CMD_INPROGRESS)
  stop_tracking 10000; ms   Command reply timeout for ATMCS stopTracking command (after SAL__CMD_INPROGRESS)
}

